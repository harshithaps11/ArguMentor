# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Whisper API Configuration (for speech-to-text)
WHISPER_API_KEY=your_whisper_api_key_here

# ElevenLabs API Configuration (for text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# D-ID API Configuration (for avatar animations)
DID_API_KEY=your_did_api_key_here

# Ready Player Me Configuration (alternative avatar solution)
RPM_API_KEY=your_ready_player_me_api_key_here

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration (for future user data storage)
DATABASE_URL=your_database_url_here

# JWT Configuration (for future authentication)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# File Upload Configuration
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log